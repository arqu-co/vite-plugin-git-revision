{
  "name": "vite-plugin-git-revision",
  "version": "0.0.0",
  "description": "Vite plugin that generates VERSION and COMMITHASH files during build based on a local git repository.",
  "main": "dist/index.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "vite",
    "vue2"
  ],
  "author": "qduld",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qduld/vite-plugin-git-revision"
  },
  "bugs": {
    "url": "https://github.com/qduld/vite-plugin-git-revision/issues"
  },
  "homepage": "https://github.com/qduld/vite-plugin-git-revision/tree/master/#readme",
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "debug": "^4.3.2"
  },
  "peerDependencies": {
    "vite": ">=2.0.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.41",
    "typescript": "^4.1.3",
    "vite": "^2.1.5"
  }
}
